<!doctype html>
<html lang="en">
<%- include('../../partials/header.ejs') %>
<body>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <form method="post">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="input-group" value="<%= prop.title %>">
        </div>
        <div class="form-group">
            <label for="subheading">Subheading</label>
            <input type="text" name="subheading" id="subheading" class="input-group" value="<%= prop.subheading %>">
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea name="content" id="content" class="input-group"><%= prop.content %></textarea>
        </div>
        <div class="float-right">
            <a href="/article/view/<%= prop.slug %>" class="btn">Cancel</a>
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </form>
</div>

<%- include('../../partials/footer.ejs') %>

<link href="/mde/simplemde.min.css" type="text/css" rel="stylesheet">
<script src="/mde/simplemde.min.js" type="text/javascript"></script>
<script type="text/javascript">
    let simplemde = new SimpleMDE({element: document.getElementById(`content`)});
    simplemde.codemirror.on("change", function () {
        document.getElementById(`content`).value = simplemde.value();
    })
</script>
</body>
</html>