<!doctype html>
<html lang="en">
<%- include('../../partials/header.ejs') %>
<body>
<div class="container">
    <%- include('../../partials/navbar.ejs') %>
    <form method="post" enctype="multipart/form-data">
        <div class="col-12">
            <div class="wrapper-avatar-auto">
                <img src="" id="imgAvatar" class="avatar-auto"
                     onclick="(function () {document.getElementById('inputAvatar').click();})()"
                     alt="">
            </div>
        </div>
        <div class="form-group pt-1">
            <input id="inputAvatar" name="image" type="file" multiple="multiple"
                   accept='image/jpg, image/jpeg, image/png' onchange="readURL(this)">
        </div>
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="input-group">
        </div>
        <div class="form-group">
            <label for="subheading">Subheading</label>
            <input type="text" name="subheading" id="subheading" class="input-group">
        </div>
        <div class="form-group">
            <label for="tags">Tag</label>
            <input type="text" name="tags" id="tags" class="input-group">
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea name="content" id="content"></textarea>
        </div>
        <div class="float-right">
            <button type="submit" class="btn btn-success">Add</button>
        </div>
    </form>
</div>
<%- include('../../partials/footer.ejs') %>
<%- include('../../partials/vendor/jqueryUi.ejs') %>
<%- include('../../partials/vendor/tokendField.ejs') %>
<%- include('../../partials/vendor/tokenFieldConstValue.ejs') %>
<%- include('../../partials/readUrlImage.ejs') %>

<link href="/mde/simplemde.min.css" type="text/css" rel="stylesheet">
<script src="/mde/simplemde.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        let simplemde = new SimpleMDE({element: document.getElementById(`content`)});
        simplemde.codemirror.on("change", function () {
            document.getElementById(`content`).value = simplemde.value();
        })
        $('#tags')
            .tokenfield({
                showAutocompleteOnFocus: true
            });
    })
</script>
</body>
</html>