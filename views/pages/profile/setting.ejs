<!doctype html>
<html lang="en">
<%- include('../../partials/header.ejs') %>
<body>
<div class="container">
    <%- include('../../partials/navbar.ejs') %>
    <div class="row">
        <form class="col-8 offset-2" method="post">
            <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" name="firstName" id="firstName" class="input-group" value="<%= user.firstName %>">
            </div>
            <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" name="lastName" id="lastName" class="input-group" value="<%= user.lastName %>">
            </div>
            <div class="form-group">
                <label for="bio">Bio</label>
                <textarea class="input-group" name="bio" id="bio"><%= user.bio %></textarea>
            </div>
            <hr>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="text" name="password" id="password" class="input-group" placeholder="*********">
            </div>
            <div class="float-right">
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    </div>
</div>
<%- include('../../partials/footer.ejs') %>
<style type="text/css">
    a:hover {
        text-decoration: none;
    }
</style>
<link href="/mde/simplemde.min.css" type="text/css" rel="stylesheet">
<script src="/mde/simplemde.min.js" type="text/javascript"></script>
<script type="text/javascript">
    let simplemde = new SimpleMDE({element: document.getElementById(`bio`)});
    simplemde.codemirror.on("change", function () {
        document.getElementById(`bio`).value = simplemde.value();
    })
</script>
</body>
</html>